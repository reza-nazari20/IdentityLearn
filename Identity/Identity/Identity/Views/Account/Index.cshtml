<h1>اطلاعات حساب کاربری من</h1>

<div>
    <h4>MyAccountInfoDto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EmailConfirmed)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmailConfirmed)
            @if(Model.EmailConfirmed==false)
            {
                <a asp-action="Register">تایید ایمیل</a>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumberConfirmed)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumberConfirmed)
            @if(Model.PhoneNumberConfirmed==false)
            {
                <a asp-action="SetPhoneNumber">تایید شماره تلفن</a>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TowFactorEnable)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TowFactorEnable)
            @if(Model.TowFactorEnable)
            {
                <b style="color:forestgreen;">نیاز به تایید دو مرحله ای</b>
            }
            else
            {
                <b style="color:crimson">ورود تک مرحله ای</b>
            }
            <br />
            <a asp-action="TowFactorEnable">برای تغییر کلیک کنید</a>
